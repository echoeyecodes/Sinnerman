<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/google_blue_color_code</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
        <item name="background">@color/white</item>
    </style>

    <style name="BottomSheetShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomRoundedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="CustomRoundedButtonTransparent" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">#1A000000</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:backgroundTint">@color/movie_primary_dark</item>
    </style>

    <style name="SearchFieldStyle">
        <item name="android:editTextBackground">@null</item>
    </style>




    <style name="BoldText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SemiBold" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OutlineButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

</resources>