<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:id="@+id/main_activity_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
    >
    <include android:id="@+id/home_tool_bar" layout="@layout/layout_home_toolbar" />
    <FrameLayout
            android:id="@+id/bottom_navigation_fragment_container"
            android:layout_width="match_parent"
            android:layout_below="@id/home_tool_bar"
            android:layout_above="@id/bottom_navigation_view"
            android:layout_height="match_parent">
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            app:backgroundTint="@color/white"
            app:itemIconTint="@color/bottom_navigation_view_selected_state"
            app:itemTextColor="@color/bottom_navigation_view_selected_state"
            app:menu="@menu/bottom_nav_menu"
            app:elevation="0dp"
            android:id="@+id/bottom_navigation_view"
    />
</RelativeLayout>
</FrameLayout>