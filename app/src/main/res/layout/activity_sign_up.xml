<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp"
        >
            <TextView
                    android:id="@+id/login_form_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BoldText"
                    android:text="SIGN UP"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="30sp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
            >

                <com.example.myapplication.CustomView.FormEditText
                        android:id="@+id/edit_text_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:form_type="firstname"
                        app:hint="First Name"
                />

                <com.example.myapplication.CustomView.FormEditText
                        android:id="@+id/edit_text_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:form_type="lastname"
                        app:hint="Lastname"
                />

                <com.example.myapplication.CustomView.FormEditText
                        android:id="@+id/edit_text_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hint="Username"
                        app:form_type="username"
                />

                <com.example.myapplication.CustomView.FormEditText
                        android:id="@+id/edit_text_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hint="Email"
                        app:form_type="email"
                        app:inputType="2"
                />

                <com.example.myapplication.CustomView.FormEditText
                        android:id="@+id/edit_text_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hint="Password"
                        app:inputType="3"
                        app:form_type="password"
                        app:isSecure="true"
                />

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/sign_up_btn"
                        android:layout_width="match_parent"
                        android:text="Sign Up"
                        android:padding="15dp"
                        android:layout_marginVertical="15dp"
                        android:layout_height="wrap_content" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/have_account_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have an account? Log in"
                    style="@style/OutlineButton"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginVertical="15dp"
            />
        </LinearLayout>
    </ScrollView>